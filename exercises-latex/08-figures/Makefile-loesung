INTERACTION=batchmode

all: build/loesung.pdf

build/loesung.pdf: loesung.tex plot1.pdf plot2.pdf plot3.pdf | build
	lualatex --output-directory=build --interaction=${INTERACTION} --halt-on-error loesung.tex
	lualatex --output-directory=build --interaction=${INTERACTION} --halt-on-error loesung.tex

build:
	mkdir -p build

clean:
	rm -rf build
